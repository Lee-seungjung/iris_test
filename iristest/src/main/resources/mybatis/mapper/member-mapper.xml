<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="member">

	<!-- 회원 단일조회(번호) -->
	<select id="selectOneNo" resultType="MemberDto" parameterType="int">
		select * from member where member_no=#{memberNo}
	</select>
	
	<!-- 회원 단일조회(아이디) -->
	<select id="selectOneId" resultType="MemberDto" parameterType="String">
		select * from member where id=#{Id}
	</select>

	<!-- salt 조회(아이디) -->
	<select id="findSalt" resultType="String" parameterType="String">
		select salt from member where id=#{Id}
	</select>
	
	<!-- pw 확인(비밀번호) -->
	<select id="pwCheck" resultType="MemberDto" parameterType="String">
		select * from member where pw=#{pw}
	</select>
	
	<!-- 회원정보 수정(MemberDto) -->
	<update id="updateMember" parameterType="MemberDto">
		update member set name=#{name}, tel=#{tel}, cell=#{cell}, team=#{team},
		job=#{job}, position=#{position}, responsibility=#{responsibility}, remarks=#{remarks}
		where member_no=#{memberNo}
	</update>
	
</mapper>